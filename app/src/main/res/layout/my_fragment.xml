<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#A9F1EDED"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#000000"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200">
        <ImageView
            android:id="@+id/img_my"
            android:src="@drawable/mine_pic"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"/>
        <TextView
            android:text="未登录"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="登陆一下，内容更精彩"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_integral"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <LinearLayout
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@drawable/mine_jifen"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"/>
            <TextView
                android:textSize="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="我的积分"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/mine_new"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_7"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>
        <Button
            android:background="@drawable/shape_break"
            android:textColor="#fff"
            android:textSize="@dimen/dp_10"
            android:text="未签到"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_20"/>
        <ImageView
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@drawable/mine_fan"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_collect"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <LinearLayout
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@drawable/mine_start"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"/>
            <TextView
                android:textSize="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="我的收藏"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>
        <ImageView
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@drawable/mine_fan"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_information"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <LinearLayout
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@drawable/mine_mes"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"/>
            <TextView
                android:textSize="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="我的消息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>
        <ImageView
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@drawable/mine_fan"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/site_my"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <LinearLayout
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@drawable/mine_set"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"/>
            <TextView
                android:textSize="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="设置"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>
        <ImageView
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@drawable/mine_fan"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"/>
    </LinearLayout>

    <LinearLayout
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:background="@drawable/shape_break"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/dp_20"
            android:id="@+id/login_my"
            android:text="登录"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>