<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.view.ForgetPassWordActivity">
    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_home_top_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/cell_phone_num"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:hint="请输入手机号"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img"
        tools:ignore="MissingConstraints" />

    <EditText

        android:id="@+id/import_verified"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/cell_phone_num"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:hint="请输入验证码"
        tools:ignore="MissingConstraints"
        />

    <TextView
        android:id="@+id/verified_get"
        android:layout_width="wrap_content"
        android:layout_height="11dp"
        android:layout_marginTop="16dp"
        android:text="获取验证码"
        app:layout_constraintBottom_toBottomOf="@+id/import_verified"
        app:layout_constraintEnd_toEndOf="@+id/import_verified"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/import_verified"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/next_but"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:text="下一步"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/import_verified"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>